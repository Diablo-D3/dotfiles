#!/usr/bin/env bash

GREEN="$(tput setaf 2)"
RESET="$(tput sgr0)"
OFFSET=0

function _start()
{
    if [ $OFFSET -ne 0 ]; then
    OFFSET=0
    echo -e ""
    fi

    echo -e "$GREEN==> $1$RESET"
}

function _end()
{
    OFFSET=0
    echo -e ""
}

function _status()
{
    OFFSET=1
    echo -e "$1"
}

function _mkdir {
    mkdir -vp "$1"
}

function _ln {
    _mkdir $(dirname "$2")
    rm -f "$2"
    ln -sTv "$1" "$2"
}

function _sudo() {
    if [[ $(groups "$USER") == *"sudo"* ]]; then
        sudo -E bash -c "source $BASE_DIR/install-lib; $*"
    else
        _status "Cannot become root: $*"
    fi
}
