#|
    Kanata

    CapsLock tap to Esc
    CapsLock hold to Ctrl

    Swap Left Option/Command (Alt/Meta) to Meta/Alt
    Right Option to Menu
|#

(defcfg
    process-unmapped-keys no
)

(defsrc
    caps ralt
    lalt lmet
)

(deflayer default
    @cac cmp
    lmet lalt
)

(defalias
    cac (tap-hold 200 200 esc lctrl)
)
